    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ProgressBar
         android:layout_width="48dp"
         android:layout_height="48dp"
         style="@android:style/Widget.ProgressBar.Large.Inverse"
