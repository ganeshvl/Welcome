<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@android:drawable/editbox_background_normal"
    android:orientation="vertical"
    android:gravity="center"
    android:minHeight="80dp"
     >

    <include layout="@layout/patientinfo_parent_item" />

    <LinearLayout
        android:id="@+id/llCompleteDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvProblemNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="PROBLEM NAME"
            android:textColor="@color/view_pager_heading_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvProblemNameVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/view_pager_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvStartDateLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="START DATE"
            android:textColor="@color/view_pager_heading_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStartDateVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/view_pager_text_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>