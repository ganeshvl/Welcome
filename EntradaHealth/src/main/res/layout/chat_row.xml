<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
<RelativeLayout 
    android:id="@+id/rootLayout"
    android:padding="7dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/fromContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:text="Ankitha"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rlMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromContact" >

    <ImageView
        android:id="@+id/attach_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/dn"
        android:visibility="gone" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="jsda askjjd lfkjf lkfjdf lkj kdjfladjf "
        android:textSize="16sp"
        android:visibility="visible" />

    </RelativeLayout>
    
    <TextView 
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlMessage"
       	android:layout_toLeftOf="@+id/statusIndicator"
        android:textSize="12sp"
        android:text="8:39PM"
        android:textColor="@color/white"
        />
    
    <ImageView
        android:id="@+id/statusIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlMessage"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/cancel" 
        />
</RelativeLayout>
</RelativeLayout>