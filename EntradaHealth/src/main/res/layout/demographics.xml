<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="DEMOGRAPHICS"
        android:textColor="@color/view_pager_heading_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.9"
        android:background="@android:drawable/editbox_background_normal"
        android:orientation="vertical"
        android:paddingLeft="15dp" >


                <TextView
                    android:id="@+id/tvNameLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="NAME"
                    android:textColor="@color/view_pager_heading_color" />

                <TextView
                    android:id="@+id/tvNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/view_pager_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvMrnLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="MRN"
                    android:textColor="@color/view_pager_heading_color" />

                <TextView
                    android:id="@+id/tvMrnValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/view_pager_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDobLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="DOB"
                    android:textColor="@color/view_pager_heading_color" />

                <TextView
                    android:id="@+id/tvDobVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/view_pager_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSexLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="SEX"
                    android:textColor="@color/view_pager_heading_color" />

                <TextView
                    android:id="@+id/tvSexVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/view_pager_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvAddInfoLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ADDITIONAL INFORMATION"
                    android:textColor="@color/view_pager_heading_color" />

                <ListView
                    android:id="@+id/lvAdditionalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="5dp" >
                </ListView>
    </LinearLayout>

</LinearLayout>