
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/bottom"
     android:layout_width="fill_parent"
     android:layout_height="54dp"
     android:layout_alignParentBottom="true"
     android:background="#f7f7f7" >

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:orientation="horizontal" >

         <LinearLayout
             android:id="@+id/llPatient"
             android:layout_width="48dp"
             android:layout_height="match_parent"
             android:layout_marginBottom="2dp"
             android:layout_marginTop="4dp"
             android:layout_weight="1"
             android:orientation="vertical" >

             <ImageView
                 android:id="@+id/ivftPat"
                 android:layout_width="48dp"
                 android:layout_height="32dp"
                 android:layout_gravity="center"
                 android:paddingTop="2dp"
                 android:src="@drawable/patient" />

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="Patient"
                 android:textColor="#919191"
                 android:textSize="12dp" />

         </LinearLayout>
         <LinearLayout
             android:id="@+id/llJobType"
             android:layout_width="48dp"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginBottom="2dp"
             android:layout_marginTop="4dp"
             android:layout_weight="1" >

             <ImageView
                 android:id="@+id/ivftJtype"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:layout_gravity="center"
                 android:paddingTop="2dp"
                 android:src="@drawable/job_type" />

              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Job Type"
                  android:textColor="#919191"
                  android:textSize="12dp" />

         </LinearLayout>
         <LinearLayout
             android:id="@+id/llStat"
             android:layout_width="48dp"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginBottom="2dp"
             android:layout_marginTop="4dp"
			android:layout_weight="1">

             <ImageView
                 android:id="@+id/ivftStat"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:layout_gravity="center"
                 android:paddingTop="2dp"
                 android:src="@drawable/stat" />

              <TextView
                  android:id="@+id/textView3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Stat"
                  android:textColor="#919191"
                  android:textSize="12dp" />

         </LinearLayout>
         <LinearLayout
             android:id="@+id/llHold"
             android:layout_width="48dp"
             android:layout_height="match_parent"
             android:orientation="vertical" 
             android:layout_marginBottom="2dp"
             android:layout_marginTop="4dp"
             android:layout_weight="1">

             <ImageView
                 android:id="@+id/ivftHold"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:layout_gravity="center"
                 android:paddingTop="2dp"
                 android:src="@drawable/hold" />

              <TextView
                  android:id="@+id/textView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Hold"
                  android:textColor="#919191"
                  android:textSize="12dp" />

         </LinearLayout>
         
         <LinearLayout
             android:id="@+id/llSpeaker"
             android:layout_width="48dp"
             android:layout_height="match_parent"
             android:orientation="vertical" 
             android:layout_marginBottom="2dp"
             android:layout_marginTop="4dp"
             android:layout_weight="1">

             <ImageView
                 android:id="@+id/ivftSpeaker"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:layout_gravity="center"
                 android:paddingTop="2dp"
                 android:src="@drawable/speaker" />

              <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Speaker"
                  android:textColor="#919191"
                  android:textSize="12dp"
                   />

         </LinearLayout>
         
         

     </LinearLayout>
        
    </RelativeLayout>
